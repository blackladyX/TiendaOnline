@model IEnumerable<Matriculas.Web.Models.Course>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
<link rel="stylesheet" href="~/lib/Font-Awesome/css/regular.min.css">
<link rel="stylesheet" href="~/lib/Font-Awesome/css/solid.min.css"> <br />
<h1>Courses</h1>

<p>
     <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create </a> 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicialDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateInscripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Intensity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassSchedule)
            </th>
            <th>
                Opcion     
            </th>
            <th>      </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InicialDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateInscripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Intensity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassSchedule)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseId" ><i class="fas fa-pencil-alt"></i></a> |
               <a asp-action="Details" asp-route-id="@item.CourseId" ><i class="fas fa-align-justify"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.CourseId" ><i class="fas fa-trash"></i></a> 
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_DeleteDialog" />
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} 
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js">
</script> <script src="/js/deleteDialog.js"></script>
